<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlGeRenXinxi"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/jiqiren"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ivIcon"
            android:text="张三"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserName"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ivIcon"
            android:text="13866664555"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:src="@mipmap/youbianjiantou"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivMuchang"
            android:layout_width="wrap_content"
            android:src="@mipmap/muchang"
            android:layout_weight="1"
            android:layout_height="80dp"/>

         <ImageView
             android:id="@+id/ivMuqun"
            android:layout_width="wrap_content"
            android:src="@mipmap/muqun"
            android:layout_weight="1"
            android:layout_height="80dp"/>

         <ImageView
             android:id="@+id/ivRenling"
            android:layout_width="wrap_content"
            android:src="@mipmap/renling"
            android:layout_weight="1"
            android:layout_height="80dp"/>



    </LinearLayout>


    <ImageView
        android:id="@+id/ivShebeiXiaoXi"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_width="80dp"
        android:src="@mipmap/shebeixiaoxi"
        android:layout_height="80dp"/>


</LinearLayout>