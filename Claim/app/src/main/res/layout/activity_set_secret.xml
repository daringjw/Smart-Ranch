<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_register_username"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/oval_grey_bg"
        android:hint="请输入用户名"
        android:inputType="number"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edt_register_secret"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/oval_grey_bg"
        android:ems="10"
        android:hint="请输入密码(6-10位数字字母组合)"
        android:inputType="textPassword"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/edt_register_username"
        app:layout_constraintRight_toRightOf="@+id/edt_register_username"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_register_verification"/>

    <EditText
        android:id="@+id/edt_register_secret_confirm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/oval_grey_bg"
        android:ems="10"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/edt_register_secret"
        app:layout_constraintRight_toRightOf="@+id/edt_register_secret"
        app:layout_constraintTop_toBottomOf="@+id/edt_register_secret"/>

    <Button
        android:id="@+id/btn_register_submit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/oval_green_bg"
        android:text="立即进入"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/edt_register_secret_confirm"
        app:layout_constraintRight_toRightOf="@+id/edt_register_secret_confirm"
        app:layout_constraintTop_toBottomOf="@+id/edt_register_secret_confirm"/>

    <EditText
        android:id="@+id/edt_register_verification"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/oval_grey_bg"
        android:ems="10"
        android:hint="验证码"
        android:inputType="number"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/edt_register_username"
        app:layout_constraintRight_toRightOf="@+id/edt_register_username"
        app:layout_constraintTop_toBottomOf="@+id/edt_register_username"
        app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>